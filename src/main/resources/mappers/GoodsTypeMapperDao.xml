<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iyy.mapper.GoodsTypeMapperDao">
  <resultMap id="BaseResultMap" type="com.iyy.entity.GoodsType">
    <id column="goods_type_id" jdbcType="INTEGER" property="goodsTypeId" />
    <result column="goods_type_name" jdbcType="VARCHAR" property="goodsTypeName" />
    <result column="create_user" jdbcType="VARCHAR" property="createUser" />
    <result column="create_date" jdbcType="TIMESTAMP" property="createDate" />
  </resultMap>
  <sql id="Base_Column_List">
    goods_type_id, goods_type_name, create_user, create_date
  </sql>
  <select id="queryGoodsTypeList" resultMap="BaseResultMap">
    select
        *
    from
        tb_goods_type
  </select>

  <select id="queryGoodsTypeListByName" resultMap="BaseResultMap">
    select
      *
    from
      tb_goods_type
    <where>
      <if test="goodsTypeName != null and goodsTypeName != ''">
        and goods_type_name like concat(#{goodsTypeName}, '%')
      </if>
    </where>
  </select>

  <select id="queryGoodsTypeByName" resultMap="BaseResultMap">
    select * from tb_goods_type where goods_type_name = #{goodsTypeName}
  </select>
</mapper>